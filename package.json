{
  "name": "troc-it",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:troc-it/troc-it.git",
  "author": "Alexis Couronne <alexis@skitoo.net>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config config/webpack.config.dev.js",
    "watch": "yarn build --watch",
    "lint": "eslint --ext .js,.vue trocit/front",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "yarn test --watch"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "trocit/front/**/*.{js,vue}",
      "!trocit/front/index.js",
      "!trocit/front/tests/setup.js",
      "!trocit/front/locales/**/*"
    ],
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/trocit/front/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "setupFiles": [
      "<rootDir>/trocit/front/tests/setup.js"
    ]
  },
  "dependencies": {
    "graphql-request": "^1.8.2",
    "js-cookie": "^2.2.0",
    "vue": "^2.5.17",
    "vue-awesome": "^3.2.0",
    "vue-i18n": "^8.3.2",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "bulma": "^0.7.2",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^4.7.1",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "mini-css-extract-plugin": "^0.4.5",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.0",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
